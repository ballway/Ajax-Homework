        xhr.addEventListener('load', () => {
            const data = xhr.responseText;
            divMessage.textContent = data;
        })

        //step2
        const formData = new FormData(document.member);
        xhr.open("post", "@Url.Content("~/api/register")");
        xhr.send(formData);*@


    })
    </script>

}